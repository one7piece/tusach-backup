<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>tusachServlet</servlet-name>
    <servlet-class>com.dv.gtusach.server.BookServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>tusachServlet</servlet-name>
    <url-pattern>/gtusach/bookService</url-pattern>
  </servlet-mapping>
  
	<servlet>
		<servlet-name>createBookServlet</servlet-name>
		<servlet-class>com.dv.gtusach.server.CreateBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>createBookServlet</servlet-name>
		<url-pattern>/createBook</url-pattern>
	</servlet-mapping>
  
	<servlet>
		<servlet-name>downloadBookServlet</servlet-name>
		<servlet-class>com.dv.gtusach.server.DownloadBookServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>downloadBookServlet</servlet-name>
		<url-pattern>/downloadBook/*</url-pattern>
	</servlet-mapping>
	
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>GTusach.html</welcome-file>
  </welcome-file-list>

</web-app>
